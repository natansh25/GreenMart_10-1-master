<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigationScreens.HelpActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="8dp"
        android:padding="5dp"
        app:cardBackgroundColor="#f6f6f6"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="405dp"
            android:layout_height="190dp">

            <ImageView
                android:id="@+id/img_detail"
                android:layout_width="47dp"
                android:layout_height="27dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/legal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_legal"
                android:layout_width="309dp"
                android:layout_height="42dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="92dp"
                android:layout_marginBottom="76dp"
                android:background="@android:color/transparent"
                android:text="Legal Policies"
                android:textAlignment="textStart"

                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/image_poster1" />


            <ImageView
                android:id="@+id/image_poster1"
                android:layout_width="47dp"
                android:layout_height="27dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:src="@mipmap/aboutus"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_detail" />

            <Button
                android:id="@+id/btn_aboutus"
                android:layout_width="315dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="92dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/transparent"
                android:text="About Us"

                android:textAlignment="textStart"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/btn_legal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/img_detail"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.05" />

            <ImageView
                android:id="@+id/image_poster12"
                android:layout_width="47dp"
                android:layout_height="29dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="144dp"
                android:src="@mipmap/contact_us"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_aboutus"
                android:layout_width="309dp"
                android:layout_height="39dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="88dp"
                android:background="@android:color/transparent"
                android:text="Contact Us"

                android:textAlignment="textStart"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/image_poster1"
                app:layout_constraintTop_toBottomOf="@+id/btn_legal" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>